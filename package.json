{
  "name": "cypress_jenkin",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:reports": "rimraf cypress/report",
    "pre-test-run": "yarn clean:reports",
    "cy:test": "cypress run --headless --browser chrome",
    "combine-reports": "mochawesome-merge cypress/report/*.json>cypress/report/output.json",
    "generate-reports": "marge cypress/report/output.json --reportDir ./ --inline",
    "post-test-run": "yarn combine-reports && yarn generate-reports",
    "cy:test-mocha-report": "yarn pre-test-run && yarn cy:test && yarn post-test-run"
  },
  "author": "Kailash",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^6.2.0",
    "mocha": "^8.2.1",
    "mochawesome": "^6.2.1",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.1.0"
  }
}
